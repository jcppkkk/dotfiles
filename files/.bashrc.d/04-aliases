fixup() {
    if [[ $# -eq 0 ]]; then
        git update-index --again "$(git rev-parse --show-toplevel)"
    else
        git add "$@"
    fi
    if [[ $(git diff --name-only --cached | wc -l) -ne 0 ]]; then
        git commit --amend --no-edit
    fi
}
