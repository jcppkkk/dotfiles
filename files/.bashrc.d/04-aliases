# Git diff files in time ordering
gdt() {
    # 顯示類似 git diff --stat 的輸出，包含日期時間和未追蹤文件
    # 用法: gdt [git diff 參數]

    # 收集所有文件信息
    local all_files=()
    local file_info=()

    # 獲取已修改/已暫存的文件
    while IFS= read -r file; do
        if [ -f "$file" ]; then
            all_files+=("$file")
        fi
    done < <(git diff --name-only "$@" 2>/dev/null)

    # 獲取未追蹤的文件
    while IFS= read -r file; do
        if [ -f "$file" ]; then
            all_files+=("$file")
        fi
    done < <(git ls-files --others --exclude-standard 2>/dev/null)

    if [ ${#all_files[@]} -eq 0 ]; then
        echo "沒有文件變更"
        return 0
    fi

    # 處理每個文件
    for file in "${all_files[@]}"; do
        # 獲取文件修改時間
        local mtime=""
        local datetime=""
        if command -v stat >/dev/null 2>&1; then
            mtime=$(stat -c %Y "$file" 2>/dev/null || stat -f %m "$file" 2>/dev/null)
            if [ -n "$mtime" ]; then
                datetime=$(date -d "@$mtime" "+%m-%d %H:%M" 2>/dev/null || date -r "$mtime" "+%m-%d %H:%M" 2>/dev/null)
            fi
        fi

        # 獲取 git 狀態和統計
        local status=""
        local stats=""

        if git ls-files --error-unmatch -- "$file" >/dev/null 2>&1; then
            # 文件在 git 中
            if git diff --cached --quiet -- "$file" 2>/dev/null; then
                if git diff --quiet -- "$file" 2>/dev/null; then
                    status="staged"
                else
                    status="modified"
                    # 獲取變更統計
                    local diff_stat=$(git diff --numstat -- "$file" 2>/dev/null | head -1)
                    if [ -n "$diff_stat" ]; then
                        local added=$(echo "$diff_stat" | cut -f1)
                        local deleted=$(echo "$diff_stat" | cut -f2)
                        if [ "$added" = "-" ] && [ "$deleted" = "-" ]; then
                            stats="binary"
                        else
                            stats="$(printf "%4s +%s -%s" "" "$added" "$deleted")"
                        fi
                    fi
                fi
            else
                status="staged"
                # 獲取暫存區統計
                local diff_stat=$(git diff --cached --numstat -- "$file" 2>/dev/null | head -1)
                if [ -n "$diff_stat" ]; then
                    local added=$(echo "$diff_stat" | cut -f1)
                    local deleted=$(echo "$diff_stat" | cut -f2)
                    if [ "$added" = "-" ] && [ "$deleted" = "-" ]; then
                        stats="binary"
                    else
                        stats="$(printf "%4s +%s -%s" "" "$added" "$deleted")"
                    fi
                fi
            fi
        else
            # 未追蹤文件
            status="untracked"
            local file_size=$(wc -l <"$file" 2>/dev/null || echo "0")
            stats="$(printf "%4s +%s" "" "$file_size")"
        fi

        # 存儲文件信息：時間戳|狀態|統計|文件路徑|日期時間
        file_info+=("$mtime|$status|$stats|$file|$datetime")
    done

    # 按時間戳排序（最新的在前）
    IFS=$'\n' sorted_files=($(sort -n <<<"${file_info[*]}"))
    unset IFS

    # 準備輸出數據
    local output_lines=()
    for line in "${sorted_files[@]}"; do
        IFS='|' read -r mtime status stats file datetime <<<"$line"
        output_lines+=("$datetime|$stats|$file")
    done

    # 使用 column 命令對齊表格
    printf "%s\n" "${output_lines[@]}" | column -s '|' -t
}

complete -F _complete_alias "${!BASH_ALIASES[@]}"
