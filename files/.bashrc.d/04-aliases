gttouch() {
    tag=$1
    GIT_COMMITTER_DATE="$(git show "$tag" --format=%aD | head -1)"
    export GIT_COMMITTER_DATE
    git tag -a -m "$tag" -f "$tag" "$tag"
}
alias gt='git tag'
gtup() {
    git tag -f "$1" "$2"
    git push -f origin "$1"
}
gtrm() {
    git tag -d "$1"
    git push -d origin "$1"
}
gtmv() {
    git tag "$2" "$1"
    git tag -d "$1"
    git push -d origin "$1" &
    git push origin "$2" &
    wait
}
gbrm() {
    git branch -D "$1"
    git push -d origin "$1"
}
gbmv() {
    git branch -m "$1" "$2"
    git push -d origin "$1" &
    git push origin "$2" &
}
gbr2tag() {
    for br; do
        git branch -D "$br"
        git tag "$br" origin/"$br"
        git push -d origin "$br"
        git push origin "$br"
    done
}

githook() {
    repo_root=$(git rev-parse --show-toplevel)
    (
        cd "$repo_root/.git" || return
        mkdir -p hooks
        src=$(realpath "$HOME/.git-templates/hooks/prepare-commit-msg")
        target=hooks/prepare-commit-msg
        if [[ -f $target ]] && [[ $(realpath "$target") != "$src" ]]; then
            echo "$(realpath "$target") != $src"
            rm -vf "$target"
        fi
        if [[ ! -f "$target" ]]; then
            ln -fvs "$src" "$target"
        fi
    )
}

alias tig='tig --stat=$COLUMNS'

# 取得相對於 repo_root 的路徑
get_repo_relative_path() {
    # 用法: get_repo_relative_path REPO_ROOT INPUT_PATH
    local repo_root="$1"
    local input="$2"
    local relative

    # INPUT_PATH 可能情況：
    # 1. 絕對路徑
    # 2. 相對路徑於當前目錄
    # 3. 相對路徑於 repo_root
    for candidate in "$input" "$PWD/$input" "$repo_root/$input"; do
        if ! abs_candidate=$(realpath -s -e "$candidate" 2>/dev/null); then
            continue
        fi
        if [[ "$abs_candidate" == "$repo_root"* ]]; then
            relative="/${abs_candidate#"$repo_root"/}"
            echo "$relative"
            return 0
        fi
    done

    # 若上述邏輯未涵蓋，則回傳原始輸入內容
    echo "$input"
}

# gitignore 函式，將指定路徑逐一轉換為相對於 repo_root 的路徑，並加入到 .git/info/exclude
gitignore() {
    if [ $# -eq 0 ]; then
        echo "Usage: gitignore <path> [<path> ...]"
        return 1
    fi

    # 取得 Git 專案根目錄
    repo_root=$(git rev-parse --show-toplevel 2>/dev/null)
    if [ -z "$repo_root" ]; then
        echo "錯誤：目前目錄不在 Git 專案中。"
        return 1
    fi

    exclude_file="$repo_root/.git/info/exclude"
    # 確保 exclude 檔案存在
    mkdir -p "$(dirname "$exclude_file")"
    touch "$exclude_file"

    for input in "$@"; do
        # 取得以 repo_root 為基準之相對路徑格式
        new_pattern=$(get_repo_relative_path "$repo_root" "$input")

        # 檢查該忽略規則是否已存在於 exclude 檔案中
        if grep -Fxq "$new_pattern" "$exclude_file"; then
            echo "規則 '$new_pattern' 已存在於 $exclude_file"
        else
            echo "$new_pattern" >>"$exclude_file"
            echo "已將規則 '$new_pattern' 以相對於 repo_root 的格式加入到 $exclude_file:"
            echo "  $new_pattern"
        fi
    done
}

# 將此函數加入到您的 ~/.bashrc 或 ~/.zshrc 檔案中

function branch-this() {
    local new_branch_name="$1"
    local current_branch=$(git rev-parse --abbrev-ref HEAD)

    # 檢查是否有提供分支名稱
    if [ -z "$new_branch_name" ]; then
        echo "用法: branch-this <新分支名稱>"
        echo "範例: branch-this feat/my-new-feature"
        return 1
    fi

    # 檢查目前是否在 master 分支上
    if [ "$current_branch" != "master" ]; then
        echo "錯誤: 請先切換到 'master' 分支再執行此功能。"
        echo "目前您在 '$current_branch' 分支上。"
        return 1
    fi

    echo "--- 開始執行 'branch-this $new_branch_name' ---"

    # 1. 建立一個新的分支來保留當前 commit
    # 注意：這裡的 git branch 不會切換分支，只是建立
    echo "1. 正在從目前的 HEAD 建立新分支 '$new_branch_name'..."
    git branch "$new_branch_name"
    if [ $? -ne 0 ]; then
        echo "錯誤: 建立分支 '$new_branch_name' 失敗。可能該分支已存在？"
        return 1
    fi

    # 2. 設定新分支追蹤 origin/master
    echo "2. 正在設定 '$new_branch_name' 追蹤 'origin/master'..."
    git branch --set-upstream-to=origin/master "$new_branch_name"
    if [ $? -ne 0 ]; then
        echo "警告: 設定 '$new_branch_name' 追蹤 'origin/master' 失敗。"
        echo "您可能需要手動執行: git branch --set-upstream-to=origin/master $new_branch_name"
        # 不返回錯誤，讓後續步驟繼續
    fi

    # 3. 將 master 分支重設到 origin/master
    echo "3. 正在將 'master' 分支重設到 'origin/master'..."
    echo "   警告: 'git reset --hard' 會丟棄 'master' 上所有在 'origin/master' 之後的本地變更。"
    git reset --hard origin/master
    if [ $? -ne 0 ]; then
        echo "錯誤: 重設 'master' 分支到 'origin/master' 失敗。"
        return 1
    fi

    echo "--- 'branch-this $new_branch_name' 操作完成！ ---"
    echo "現在 '$new_branch_name' 分支保留了您原先的最新 commit。"
    echo "而 'master' 分支已重設到 'origin/master'。"
    echo "您可以切換到新分支進行後續開發: git checkout $new_branch_name"
}

#-------------------------------------------------------------
# Search Code
#-------------------------------------------------------------
#
alias ag='\ag --hidden --ignore=.git --ignore=tags --ignore="*~"'
vag() {
    if [[ $1 == -rn ]]; then
        shift
    fi
    tmp=$(mktemp)
    ag --hidden --ignore .git/ --ignore .tags --ignore "*~" --vimgrep "$*" >"$tmp"
    vim -c "cfile $tmp" -c "1bd"
    rm -f "$tmp"
}

ags() {
    if [ $# -lt 2 ]; then
        echo "用法: ags <ag_pattern> <sed_subst> [ag 其他參數]" >&2
        echo "範例: ags 'TODO' 's/old/new/g' --js" >&2
        return 2
    fi

    local ag_pattern="$1"
    local sed_subst="$2"
    shift 2
    if ! command -v ag >/dev/null 2>&1; then
        echo "錯誤: 找不到 ag (The Silver Searcher)." >&2
        return 1
    fi

    # 為不同作業系統準備 sed -i 的參數（macOS 要空字串作為備份參數）
    local uname_s
    uname_s=$(uname)
    local sed_args
    if [ "$uname_s" = "Darwin" ]; then
        sed_args=(-i '' -E -e)
    else
        sed_args=(-i -E -e)
    fi

    # 用 ag 列出 null 分隔的檔案清單，逐一以 sed 就地替換
    local file
    while IFS= read -r -d '' file; do
        [ -z "$file" ] && continue
        sed "${sed_args[@]}" "$sed_subst" -- "$file"
    done < <(ag -0 -l -- "$ag_pattern" "$@")
}

