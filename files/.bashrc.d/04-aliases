    # shellcheck disable=SC2139
    alias "$dots=$target"
    dots+="."
    target+="/.."
done
unset dots target

# become_sem_ver: 2.1.1-R1
mk256() {
    if [[ -n "$1" ]]; then
        sha256sum "$1" >"$1".sha256
    fi
}

