[user]
	name = Jethro Yu
[core]
	editor = vim
	autocrlf = input
	whitespace = cr-at-eol
	pager = less -FXRS -x4
	excludesfile = /home/jethro/.gitignore_global
[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto
	ui = true
[alias]
	co = checkout
	ci = commit --verbose
	st = status
	br = branch
	last = log -1 HEAD
	unstage = reset HEAD --
	gr = "log --graph --pretty=format:'%Cred%h%Creset%x09%C(yellow) %d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative"
	last = !git --no-pager gr -20
	d = difftool
[merge]
	tool = meld
	conflictstyle = diff3
[mergetool "mymeld"]
	cmd = meld --diff $BASE $LOCAL --diff $BASE $REMOTE --diff $LOCAL $BASE $REMOTE $MERGED
[branch]
	autosetuprebase = always
[push]
	default = current
[credential]
	helper = cache --timeout=86400
[rerere]
	enabled = 1
[rebase]
	instructionFormat = [%an @ %ar] %s
[git-up "fetch"]
	prune = true
	all = true
[diff]
	noprefix = true
[git-up "rebase"]
	arguments = --committer-date-is-author-date
[mergetool]
	keepBackup = false
