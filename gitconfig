[user]
	name = Jethro Yu
[core]
	editor = vim
	autocrlf = input
    whitespace = cr-at-eol
	pager = less -+F
[color]
	branch = auto
    diff = auto
	interactive = auto
	status = auto
	ui = true
[alias]
	co = checkout
	ci = commit --verbose
	st = status
	br = branch
	last = log -1 HEAD
	unstage = reset HEAD --
    gr = "log --all --graph --pretty=format:'%Cred%h%Creset%x09%C(yellow) %d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative"
    last = !git --no-pager gr -20
	d = difftool
[merge]
    tool = meld
[branch]
	autosetuprebase = always
[push]
	default = current
