#!/bin/bash
# vim: set et fenc=utf-8 ff=unix sts=4 sw=4 ts=8 :
common_lib="$(dirname "$(readlink -f "$0")")/common-lib"
if [[ -f "$common_lib" ]]; then
    # shellcheck source=common-lib
    . "$common_lib"
else
    echo "Cannot find common-lib."
    exit 1
fi

eval "$("$HOME/.local/bin/mise" activate bash)"

mise use --global python@3.12 python@3.10 python@3.8
mise plugin add poetry
mise settings set experimental true

pip install --upgrade pip
if ! command -v pipx &>/dev/null; then
    pip install --user pipx
fi

# install python tools
uv tool install -U percol

# package manager
uv tool install -U pipenv
uv tool install -U poetry

# dev tools
uv tool install -U ruff
uv tool install -U git-up
uv tool install -U pre-commit

# devops tools
uv tool install -U ansible
uv tool install -U flameshow
uv tool install -U git+https://github.com/jcppkkk/update-kube-config.git
